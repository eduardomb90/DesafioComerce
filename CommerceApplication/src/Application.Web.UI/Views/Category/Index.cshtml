@model PaginationViewModel<CategoryViewModel>

@{ 
    ViewData["Title"] = "Category";
}

<h1>Category</h1>

<div class="row">
    <div class="col-md-12">
        <div>
            <a asp-action="Create" class="btn btn-primary">New Category</a>
        </div>
    </div>
</div>

<div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    Nome
                </th>
            </tr>
        </thead>

        <tbody>

            @foreach (var item in Model.List)
            {
            <tr>

               
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>

                <td>
                    <a asp-action="Edit" asp-controller="Category" asp-route-id="@item.Id"
                       class="btn btn-warning" title="Edit">
                        <span class="fas fa-edit">Edit</span>
                    </a>
                    <a asp-action="Details" asp-controller="Category" asp-route-id="@item.Id"
                       class="btn btn-primary" title="Details">
                        <span class="fas fa-edit">Details</span>
                    </a>
                    <a asp-action="Delete" asp-controller="Category" asp-route-id="@item.Id"
                       class="btn btn-danger" title="Delete">
                        <span class="fas fa-edit">Delete</span>
                    </a>
                </td>
            </tr>

            }
        </tbody>
    </table>
</div>

<vc:pagination model-pagination="@Model"></vc:pagination>