@model SupplierViewModel

@{
    ViewData["Title"] = "Create New Supplier";
}

<div class="tab">
    <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item active" role="presentation">
            <button class="tablinks nav-link"  onclick="openCity(event, 'Physical')">Physical</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="tablinks nav-link" onclick="openCity(event, 'Juridical')">Juridical</button>
        </li>

    </ul>
</div>

<div id="Physical" class="tabcontent active">
    <h2>Physical</h2>
    <form asp-action="Create">
        <div>
            <div class="mb-3">
                <label asp-for="FullName" class="form-label"></label>
                <input asp-for="FullName" class="form-control">
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Cpf" class="form-label"></label>
                <input asp-for="Cpf" class="form-control">
                <span asp-validation-for="Cpf" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="BirthDate" class="form-label"></label>
                <input asp-for="BirthDate" class="form-control">
                <span asp-validation-for="BirthDate" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="FantasyName" class="form-label"></label>
                <input asp-for="FantasyName" class="form-control">
                <span asp-validation-for="FantasyName" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="Email.EmailAddress" class="form-label"></label>
            <input asp-for="Email.EmailAddress" class="form-control">
            <span asp-validation-for="Email.EmailAddress" class="text-danger"></span>
        </div>

        <br />
        <div>
            <h3>Address</h3>
            <div class="mb-3">
                <label asp-for="Address.Street" class="form-label"></label>
                <input asp-for="Address.Street" class="form-control">
                <span asp-validation-for="Address.Street" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Address.Number" class="form-label"></label>
                <input asp-for="Address.Number" class="form-control">
                <span asp-validation-for="Address.Number" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Address.Complement" class="form-label"></label>
                <input asp-for="Address.Complement" class="form-control">
                <span asp-validation-for="Address.Complement" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Address.Neighborhood" class="form-label"></label>
                <input asp-for="Address.Neighborhood" class="form-control">
                <span asp-validation-for="Address.Neighborhood" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Address.City" class="form-label"></label>
                <input asp-for="Address.City" class="form-control">
                <span asp-validation-for="Address.City" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Address.State" class="form-label"></label>
                <input asp-for="Address.State" class="form-control">
                <span asp-validation-for="Address.State" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Address.Reference" class="form-label"></label>
                <input asp-for="Address.Reference" class="form-control">
                <span asp-validation-for="Address.Reference" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Address.ZipCode" class="form-label"></label>
                <input asp-for="Address.ZipCode" class="form-control">
                <span asp-validation-for="Address.ZipCode" class="text-danger"></span>
            </div>

            <div>
                <h3>Phones</h3>
                <div class="mb-3">
                    <label asp-for="CellPhone" class="form-label"></label>
                    <input asp-for="CellPhone" class="form-control">
                    <span asp-validation-for="CellPhone" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="HomePhone" class="form-label"></label>
                    <input asp-for="HomePhone" class="form-control">
                    <span asp-validation-for="HomePhone" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Phone" class="form-label"></label>
                    <input asp-for="Phone" class="form-control">
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
            </div>

        </div>
        <button type="submit" value="Create" class="btn btn-primary">Submit</button>
    </form>
</div>

<div id="Juridical" class="tabcontent" style="display:none">
    <h2>Juridical</h2>
    <form asp-action="Create">
        <div class="mb-3">
            <label asp-for="Email.EmailAddress" class="form-label"></label>
            <input asp-for="Email.EmailAddress" class="form-control">
            <span asp-validation-for="Email.EmailAddress" class="text-danger"></span>
        </div>

        <br />
        <h3>Address</h3>
        <div class="mb-3">
            <label asp-for="Address.Street" class="form-label"></label>
            <input asp-for="Address.Street" class="form-control">
            <span asp-validation-for="Address.Street" class="text-danger"></span>
        </div>
        <div class="mb-0">
            <label asp-for="Address.Number" class="form-label"></label>
            <input asp-for="Address.Number" class="form-control">
            <span asp-validation-for="Address.Number" class="text-danger"></span>
        </div>
        <button type="submit" value="Create" class="btn btn-primary">Submit</button>
    </form>
</div>


<script>
    function openCity(evt, supplierType) {
        var i, tabcontent, tablinks;
        tabcontent = document.getElementsByClassName("tabcontent");
        for (i = 0; i < tabcontent.length; i++) {
            tabcontent[i].style.display = "none";
        }
        tablinks = document.getElementsByClassName("tablinks");
        for (i = 0; i < tablinks.length; i++) {
            tablinks[i].className = tablinks[i].className.replace(" active", "");
        }
        document.getElementById(supplierType).style.display = "block";
        evt.currentTarget.className += " active";
    }
</script>